//Q3:

#include "stdafx.h"
#include <iostream> 
#include <vector>
#include <string>

using namespace std;

int main(int argc, char * argv[])
{
	
	vector<string> v;
	for (int i = 0; i<argc; ++i)   //get command lines
		v.push_back(argv[i]);

	for (int k = 0; k < v.size(); k++)  //print out command lines
		cout << v[k] << endl;
	
	return 0;
}

//Output is "studio2"
