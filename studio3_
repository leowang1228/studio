*****************************************************************************

// Q6:
//

#include "stdafx.h"
#include <iostream>
#include <vector>
#include <string>
#include <cstring>
#include <sstream>

#include <fstream>

using namespace std;


int main(int argc, char * argv[])
{
	
	if (argc==3)
	{ 
	ifstream ifs;
	string in = argv[1];
	in += ".txt";
	ifs.open(in.c_str());
	if (!ifs.is_open())
		cout << argv[1] << " is not open successfully" << endl;



	ofstream ofs;
	string out = argv[2];
	
	 out+= ".txt";
	ofs.open(out.c_str());

	if(!ofs.is_open())
		cout << argv[2] << " is not open successfully" << endl;
	
	if (ifs.is_open()
		&& ofs.is_open())
	{
		string line,word;
		while (getline(ifs, line))
		{
			istringstream iss(line);
			iss >> word;
		    ofs << word<<" ";
		}
		
		
	}


	ifs.close();
	ofs.close();

	}

	else
	{
		return -1;
	}
	
	return 0;
}
